{
  "openapi": "3.0.0",
  "info": {
    "title": "Siencetopia API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/studyplan": {
      "post": {
        "summary": "Generate Study Plan",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "StudyPlan": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "requestBody": {
          "description": "Study Plan Request",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "Name": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
